# Physical AI RAG System - Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
API_V1_STR=/api/v1
DEBUG=false

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,https://your-github-username.github.io

# Database Configuration (Neon Postgres)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://physical_ai_user:dev_password@localhost:5432/physical_ai

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=physical_ai_chunks

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# RAG Configuration
CHUNK_SIZE_THEORETICAL=800
CHUNK_SIZE_CODE=1200
CHUNK_SIZE_MIXED=1000
CHUNK_OVERLAP=200
RETRIEVAL_TOP_K=8
VECTOR_SEARCH_WEIGHT=0.7
BM25_SEARCH_WEIGHT=0.3

# Performance Configuration
MAX_QUERY_LENGTH=500
MAX_RESPONSE_TOKENS=1000
REQUEST_TIMEOUT=30
